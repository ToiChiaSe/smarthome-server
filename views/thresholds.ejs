<!DOCTYPE html>
<html lang="vi">
<head><meta charset="UTF-8"><title>Thresholds</title><link rel="stylesheet" href="/style.css"></head>
<body>
<nav>
  <a href="/dashboard">Dashboard</a>
  <a href="/thresholds">Thresholds</a>
  <a href="/schedules">Scheduler</a>
  <a href="/users">Users</a>
</nav>
<div class="container">
  <h1>Ngưỡng cảm biến</h1>
  <table>
    <thead><tr><th>Sensor</th><th>Comparator</th><th>Value</th><th>Actions</th></tr></thead>
    <tbody>
      <% thresholds.forEach(t=>{ %>
        <tr>
          <td><%= t.sensorType %></td>
          <td><%= t.comparator %></td>
          <td><%= t.value %></td>
          <td><%= t.actions.join(", ") %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>

