<!DOCTYPE html>
<html lang="vi">
<head><meta charset="UTF-8"><title>Schedules</title><link rel="stylesheet" href="/style.css"></head>
<body>
<nav>
  <a href="/dashboard">Dashboard</a>
  <a href="/thresholds">Thresholds</a>
  <a href="/schedules">Scheduler</a>
  <a href="/users">Users</a>
</nav>
<div class="container">
  <h1>Lịch bật/tắt</h1>
  <table>
    <thead><tr><th>Device</th><th>Cron</th><th>Action</th></tr></thead>
    <tbody>
      <% schedules.forEach(s=>{ %>
        <tr>
          <td><%= s.deviceId %></td>
          <td><%= s.cron %></td>
          <td><%= s.action %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</body>
</html>

